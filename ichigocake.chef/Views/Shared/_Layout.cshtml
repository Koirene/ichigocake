<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ichigo cake admin page</title>
    @Styles.Render("~/Content/ChefContent")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">İCHİGO CAKE@*<img alt="ichigo cake logo" src="@Url.Content("~/Content/img/logo.png")">*@</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Anasayfa</a></li>
                    <li><a href="#">Ayarlar</a></li>
                    <li><a href="#">Profil</a></li>
                    <li><a href="#">Yardım</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li class="active"><a href="@Url.Action("Index","Home")">Anasayfa</a></li>
                    <li><a href="#">Şiparişlerim</a></li>
                    <li><a href="#">Mesajlarım</a></li>
                </ul>
                <ul class="nav nav-sidebar">
                    <li><a href="#">Pastalarım</a></li>
                    <li><a href="">Kategori Ekle</a></li>
                    <li><a href="">Pasta Ekle</a></li>
                </ul>
                <ul class="nav nav-sidebar">
                    <li><a href="">Referanslarım</a></li>
                    <li><a href="">Referans Ekle</a></li>
                </ul>
                <ul class="nav nav-sidebar">
                    <li><a href="">Raporlar</a></li>
                </ul>
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/ChefScripts")
    @RenderSection("scripts", required: false)
</body>
</html>
