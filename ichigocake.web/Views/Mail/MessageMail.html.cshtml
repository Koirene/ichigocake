@model ichigocake.web.Models.MailModels.MailModel
@using ActionMailer.Net
@using NUnit.Framework.Constraints

@{
    ViewBag.Title = "MessageMail";
    Layout = "~/Views/Shared/_MailLayout.cshtml";
}

<layout label="Text only">
    <table class="w580" width="580" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
                <td class="w580" width="580">
                    <p align="left" class="article-title"><singleline label="Title">@Model.Subject</singleline></p>
                    <div align="left" class="article-content">
                        <multiline label="Description">@Model.Message</multiline>
                        
                        <multiline label="Description"><p class="article-title">Kullanıcı İsim:</p> @Model.UserName</multiline>
                        <multiline label="Description"><p class="article-title">Kullanıcı Telefon:</p> @Model.Phone</multiline>
                        <multiline label="Description"><p class="article-title">Kullanıcı Email:</p> @Model.Email</multiline>
                    </div>
                </td>
            </tr>
            <tr><td class="w580" width="580" height="10"></td></tr>
        </tbody>
    </table>
</layout>